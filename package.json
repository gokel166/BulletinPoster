{
  "name": "bulletin-rc",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.0.17",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "babel-eslint": "*",
    "cross-env": "*",
    "husky": "*",
    "lint-staged": "*",
    "node-fetch": "*",
    "npm-run-all": "*",
    "prettier": "^1.8.2",
    "standard": "^10.0.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "lint": "prettier 'src/**/*.js' --write --single-quote --no-semi && standard --fix",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*js": [
      "prettier --write --single-quote --no-semi",
      "standard --fix",
      "git add"
    ]
  },
  "standard": {
    "globals": [
      "fetch",
      "FormData",
      "it",
      "state",
      "URL"
    ],
    "parser": "babel-eslint"
  }
}
